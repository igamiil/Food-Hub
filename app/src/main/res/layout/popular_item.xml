<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="154.5dp"
    android:layout_height="216dp"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/popular_img"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:scaleType="centerCrop"
        android:src="@drawable/popular_img"
        app:riv_corner_radius="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:paddingHorizontal="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_style"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popular_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tt_regular"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="28dp"
        android:src="@drawable/like_icon"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="28dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:paddingHorizontal="5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_style"
        android:gravity="center"
        android:orientation="horizontal"
        android:translationX="-25dp"
        android:translationY="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/popular_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/semi_bold"
            android:text="4.5"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="(25)"
            android:textSize="8dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/popular_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_img"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/semi_bold"
        android:text="Salmon Salad"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/poplar_dis"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/popular_title"
        android:fontFamily="@font/sofia_light"
        android:text="Baked Salmon Fish"
        android:textSize="12dp" />


</RelativeLayout>