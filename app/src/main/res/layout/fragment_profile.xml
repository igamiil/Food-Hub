<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/profile_bg"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Profile">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_btn" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="100dp"
        android:padding="10dp"
        app:riv_corner_radius="50dp"
        android:src="@drawable/profile_icon"
        android:background="@drawable/rest_profile_style"
        android:layout_gravity="center"
        android:layout_height="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:text="Customer"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/sofia_bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Edit Profile"
        android:textColor="@color/secondary_txt"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:fontFamily="@font/sofia_regular"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="#9796A1"
        android:text="Full name"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sofia_regular"
        android:textSize="16dp"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_width="match_parent"
        android:padding="20dp"
        android:inputType="text"
        android:text="Enter your full name"
        android:background="@drawable/edit_txt"
        android:layout_height="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#9796A1"
        android:text="E-mail"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/sofia_regular"
        android:textSize="16dp"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_width="match_parent"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:text="Example@mail.com"
        android:background="@drawable/edit_txt"
        android:layout_height="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#9796A1"
        android:text="Phone Number"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/sofia_regular"
        android:textSize="16dp"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_width="match_parent"
        android:padding="20dp"
        android:inputType="number"
        android:text="+1 (783) 0986 8786"
        android:drawableEnd="@drawable/eye"
        android:background="@drawable/edit_txt"
        android:layout_height="65dp" />



</LinearLayout>