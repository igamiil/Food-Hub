<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="266dp"
    android:layout_height="204dp"
    android:padding="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/popular_img"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:scaleType="centerCrop"
        android:src="@drawable/popular_img"
        app:riv_corner_radius="15dp" />

    <LinearLayout
        android:layout_width="58dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/btn_style"
        android:layout_height="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="4.5"
            android:textColor="@color/black"
            android:id="@+id/popular_price"
            android:textSize="20dp"
            android:fontFamily="@font/tt_regular"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="28dp"
        android:src="@drawable/like_icon"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="28dp" />

    <LinearLayout
        android:layout_width="59dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_style"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:translationY="45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/popular_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:text="4.5"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(25)"
            android:textSize="8dp" />


    </LinearLayout>


    <TextView
        android:id="@+id/popular_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_img"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/semi_bold"
        android:text="Salmon Salad"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/poplar_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popular_title"
        android:fontFamily="@font/sofia_light"
        android:text="Baked Salmon Fish"
        android:textSize="12dp" />


</RelativeLayout>