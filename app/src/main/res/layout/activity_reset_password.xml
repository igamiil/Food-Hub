<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@drawable/signup_bg"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Reset_password">


    <TextView

        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:text="Reset Password"
        android:textSize="36.5dp"
        android:fontFamily="@font/sofia_bold"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#9796A1"
        android:text="Please enter your email address torequest a password reset"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/sofia_regular"
        android:textSize="16dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:text="Your email or phone"
        android:background="@drawable/edit_txt"
        android:layout_height="65dp" />


    <Button
        android:layout_width="248dp"
        android:text="send new password"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/semi_bold"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:background="@drawable/primary_btn"
        android:layout_gravity="center"
        android:layout_height="60dp" />


</LinearLayout>