<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".AddAddress">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include layout="@layout/fragment_header"/>



        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9796A1"
            android:text="Full name"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/sofia_regular"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:padding="20dp"
            android:inputType="text"
            android:text="Enter your full name"
            android:background="@drawable/edit_txt"
            android:layout_height="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9796A1"
            android:text="Number"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/sofia_regular"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:padding="20dp"
            android:inputType="textEmailAddress"
            android:text="Enter your phone"
            android:background="@drawable/edit_txt"
            android:layout_height="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9796A1"
            android:text="State"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/sofia_regular"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:padding="20dp"
            android:text="Select state"
            android:background="@drawable/edit_txt"
            android:layout_height="65dp" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9796A1"
            android:text="City"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/sofia_regular"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:padding="20dp"
            android:text="Select city"
            android:background="@drawable/edit_txt"
            android:layout_height="65dp" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9796A1"
            android:text="Street (include house number)"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/sofia_regular"
            android:textSize="16dp"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_width="match_parent"
            android:padding="20dp"
            android:hint="Street"
            android:background="@drawable/edit_txt"
            android:layout_height="65dp" />


    </LinearLayout>


    <Button
        android:layout_width="248dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/primary_btn"
        android:fontFamily="@font/semi_bold"
        android:text="save"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>