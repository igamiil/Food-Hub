<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".OrderEmpty">

    <include layout="@layout/fragment_header"/>
    <include layout="@layout/slider_btn"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/empty_img"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="No upcoming orders"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/semi_bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="No upcoming orders have been placed yet.\nDisocover and order now"
            android:textAlignment="center"
            android:textColor="@color/secondary_txt"
            android:fontFamily="@font/sofia_regular"
            android:layout_height="wrap_content"/>
        
        <Button
            android:layout_width="250dp"
            android:text="discover now"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:background="@drawable/primary_btn"
            android:layout_height="60dp"/>




    </LinearLayout>







</LinearLayout>

